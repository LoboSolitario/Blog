<% include partials/header %>
    <div class="ui main text container segment">
        <div class="ui  header">
            <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                
                <div class="field">
                    <label>Blog Name</label>
                    <input  type= "text" name="blog[name]" value="<%=blog.name%>">
                </div>
                
                <div class="field">
                    <label>Image URL</label>
                    <input  type= "text" name="blog[image]" value="<%=blog.image%>">
                </div>
                
                 <div class="field">
                    <label>Author</label>
                    <input type="text" name="blog[author]" value="<%=blog.author%>">
                </div>
                
                <div class="field">
                    <label>Blog Content</label>
                    <textarea name="blog[body]"><%=blog.body%></textarea>
                </div>
                
                <input class="ui violet basic button" type="submit">
                
            </form>
        </div>
    </div>
<% include partials/footer %>
